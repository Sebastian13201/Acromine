<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.acromine.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_acromineFragment"
            app:destination="@id/acromineFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/acromineFragment"
        android:name="com.acromine.ui.AcromineFragment"
        android:label="AcromineFragment" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.register.RegisterFragment"
        android:label="RegisterFragment" />
</navigation>